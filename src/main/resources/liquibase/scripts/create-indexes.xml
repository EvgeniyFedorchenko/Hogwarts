<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">


    <changeSet id="create-indexes.4" author="evgeniy-fedorchenko">

        <preConditions>
            <tableExists tableName="students"/>
            <tableExists tableName="faculties"/>
        </preConditions>

        <createIndex tableName="students" indexName="student-name-idx">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="faculties" indexName="faculty-name-color-idx">
            <column name="name"/>
            <column name="color"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>